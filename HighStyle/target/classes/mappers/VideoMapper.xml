<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.mybatis.example.ReviewMapper">
  <!-- 과외코드가 ~인 게시코드가 있는지 확인하여라 -->
  <select id="selectPostId" resultType="int">
  	select count(post_id)
  	from ext_post
  	where ext_id=#{ext_id}
  	<!-- (select ext_id
  				  from ext_info
  				  where ext_id=#{ext_id} and user_id=#{user_id}) -->	
  </select>
  <!-- 게시코드가 있을시 마지막 게시코드를 가져와라 -->
  <select id="getPostId" resultType="String">
  	select post_id
  	from ext_post
  	where ext_id=#{ext_id}
  	order by post_id desc limit 1
  </select>
  <!-- 게시코드가 있을시 +1된 게시코드를 받아서 게시글을 등록 하여라 -->
  <!-- 게시코드가 없을시 게시코드를 받아서 등록 하여라 -->
  <insert id="postingPostId">
  	insert into ext_post (ext_id,post_id,user_id) values(#{ext_id},#{post_id},#{user_id})
  </insert>
  <insert id="postingItem">
  	insert into posting_list (post_id,post_title,post_cont,att_file,post_code,ext_id)
  	values (#{post_id},#{post_title},#{post_cont},#{att_file},#{post_code},#{ext_id})
  </insert>
  <select id="listAll" resultType="ReviewVO">
  	select *
  	from posting_list
  	where ext_id=#{ext_id}
  	order by post_id desc
  </select>
  
  <select id="listOne" resultType="ReviewVO">
  	select *
  	from posting_list
  	where post_id=#{post_id}
  </select>
  
  <select id="thumb_info_one" resultType="thumb_infoVO">
  	select *
  	from thumb_info
  	where post_id=#{post_id}
  	order by thumb_id desc limit 1
  </select>
  
  <select id="thumb_id_count" resultType="int">
  	select count(thumb_id)
  	from thumb_info
  	where post_id=#{post_id}
  </select>
  
  <insert id="thumb_info_insert">
  	insert into thumb_info (thumb_id,thumb_time,thumb_memo,post_id,thumb_name)
  		values(#{thumb_id},#{thumb_time},#{thumb_memo},#{post_id},#{thumb_name})
  </insert>
  
  <select id="selectAllThumbInfo" resultType="thumb_infoVO">
  	select *
  	from thumb_info
  	where post_id=#{post_id}
  </select>
</mapper>