	<result property="prof_photo" column ="prof_photo"></result>
</resultMap>
<!-- [강사]가 개인 과외에 신청한 학생을 수락했을 경우 -->
<update id="acceptPrivateClass">
<![CDATA[
update ext_info set str_class_date = sysdate() where ext_id = #{ext_id}
]]>
</update>
</mapper>